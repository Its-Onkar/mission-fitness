<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mission Fitness - Transform Your Life</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #ffffff 0%, #a1a1a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .hero-pattern {
            background-image: 
                radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(255,255,255,0.1) 0%, transparent 50%);
        }
        
        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .card-hover:hover {
            transform: translateY(-8px);
        }
        
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        .floating {
            animation: floating 3s ease-in-out infinite;
        }
        
        @keyframes floating {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        .geometric-bg {
            background-image: 
                linear-gradient(45deg, rgba(255,255,255,0.05) 25%, transparent 25%),
                linear-gradient(-45deg, rgba(255,255,255,0.05) 25%, transparent 25%),
                linear-gradient(45deg, transparent 75%, rgba(255,255,255,0.05) 75%),
                linear-gradient(-45deg, transparent 75%, rgba(255,255,255,0.05) 75%);
            background-size: 60px 60px;
            background-position: 0 0, 0 30px, 30px -30px, -30px 0px;
        }
    </style>
</head>
<body class="bg-black text-white overflow-x-hidden">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-black/90 backdrop-blur-md z-50 border-b border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="text-2xl font-black">
                    <span class="text-white">MISSION</span>
                    <span class="text-gray-400">FITNESS</span>
                </div>
                <div class="hidden md:flex space-x-8">
                    <a href="#home" class="text-gray-300 hover:text-white transition-colors">Home</a>
                    <a href="#features" class="text-gray-300 hover:text-white transition-colors">Features</a>
                    <a href="#about" class="text-gray-300 hover:text-white transition-colors">About</a>
                    <a href="#contact" class="text-gray-300 hover:text-white transition-colors">Contact</a>
                </div>
                <div class="flex space-x-4">
                    <button class="text-gray-300 hover:text-white font-medium transition-colors">Login</button>
                    <button class="bg-white text-black px-6 py-2 font-semibold hover:bg-gray-200 transition-all transform hover:scale-105">
                        Get Started
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="min-h-screen flex items-center justify-center relative hero-pattern">
        <div class="absolute inset-0 geometric-bg opacity-20"></div>
        <div class="text-center px-4 relative z-10 max-w-6xl mx-auto">
            <div class="floating mb-8">
                <h1 class="text-5xl md:text-8xl font-black mb-6 leading-tight">
                    <span class="block gradient-text">TRANSFORM</span>
                    <span class="block text-white">YOUR LIFE</span>
                </h1>
            </div>
            <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto font-light">
                Unleash your potential with cutting-edge fitness technology, personalized training, and a community that never gives up.
            </p>
            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
                <button class="bg-white text-black px-8 py-4 text-lg font-bold hover:bg-gray-200 transition-all transform hover:scale-105 w-full sm:w-auto">
                    START YOUR MISSION
                </button>
                <button class="border-2 border-white text-white px-8 py-4 text-lg font-bold hover:bg-white hover:text-black transition-all transform hover:scale-105 w-full sm:w-auto">
                    WATCH DEMO
                </button>
            </div>
            <div class="mt-16 pulse-animation">
                <div class="w-8 h-8 border-2 border-white mx-auto animate-bounce"></div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-20 bg-gray-900">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
                <div class="card-hover">
                    <div class="text-4xl md:text-6xl font-black text-white mb-2">10K+</div>
                    <div class="text-gray-400 font-medium">MEMBERS</div>
                </div>
                <div class="card-hover">
                    <div class="text-4xl md:text-6xl font-black text-white mb-2">24/7</div>
                    <div class="text-gray-400 font-medium">ACCESS</div>
                </div>
                <div class="card-hover">
                    <div class="text-4xl md:text-6xl font-black text-white mb-2">50+</div>
                    <div class="text-gray-400 font-medium">TRAINERS</div>
                </div>
                <div class="card-hover">
                    <div class="text-4xl md:text-6xl font-black text-white mb-2">100%</div>
                    <div class="text-gray-400 font-medium">RESULTS</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 bg-black">
        <div class="max-w-7xl mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-6xl font-black mb-4">
                    <span class="gradient-text">ELITE</span> FEATURES
                </h2>
                <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                    Everything you need to dominate your fitness journey
                </p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gray-900 p-8 card-hover border border-gray-800 group">
                    <div class="w-16 h-16 bg-white text-black flex items-center justify-center font-black text-2xl mb-6 group-hover:bg-gray-200 transition-colors">
                        AI
                    </div>
                    <h3 class="text-2xl font-bold mb-4">AI-POWERED TRAINING</h3>
                    <p class="text-gray-400 leading-relaxed">
                        Advanced algorithms analyze your performance and adapt your workouts in real-time for maximum efficiency.
                    </p>
                </div>
                
                <div class="bg-gray-900 p-8 card-hover border border-gray-800 group">
                    <div class="w-16 h-16 bg-white text-black flex items-center justify-center font-black text-2xl mb-6 group-hover:bg-gray-200 transition-colors">
                        VR
                    </div>
                    <h3 class="text-2xl font-bold mb-4">VIRTUAL REALITY</h3>
                    <p class="text-gray-400 leading-relaxed">
                        Immersive workout experiences that make fitness engaging, fun, and incredibly effective.
                    </p>
                </div>
                
                <div class="bg-gray-900 p-8 card-hover border border-gray-800 group">
                    <div class="w-16 h-16 bg-white text-black flex items-center justify-center font-black text-2xl mb-6 group-hover:bg-gray-200 transition-colors">
                        24
                    </div>
                    <h3 class="text-2xl font-bold mb-4">24/7 ACCESS</h3>
                    <p class="text-gray-400 leading-relaxed">
                        Train on your schedule with round-the-clock facility access and digital coaching support.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-white text-black">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h2 class="text-4xl md:text-6xl font-black mb-6">
                READY TO <span class="text-gray-600">DOMINATE?</span>
            </h2>
            <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                Join thousands who've transformed their lives. Your mission starts now.
            </p>
            <button class="bg-black text-white px-12 py-4 text-lg font-bold hover:bg-gray-800 transition-all transform hover:scale-105">
                BEGIN TRANSFORMATION
            </button>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black border-t border-gray-800 py-12">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid md:grid-cols-4 gap-8">
                <div class="md:col-span-2">
                    <div class="text-3xl font-black mb-4">
                        <span class="text-white">MISSION</span>
                        <span class="text-gray-400">FITNESS</span>
                    </div>
                    <p class="text-gray-400 max-w-md">
                        Redefining fitness through innovation, technology, and an unwavering commitment to your success.
                    </p>
                </div>
                <div>
                    <h4 class="font-bold text-white mb-4">QUICK LINKS</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition-colors">Memberships</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Training</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Nutrition</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Support</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-bold text-white mb-4">CONNECT</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition-colors">Instagram</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Facebook</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">YouTube</a></li>
                        <li><a href="#" class="hover:text-white transition-colors">Twitter</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; <span id="currentYear"></span> Mission Fitness. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Dynamic year
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        
        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Add scroll effect to navigation
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('nav');
            if (window.scrollY > 100) {
                nav.classList.add('backdrop-blur-lg');
            } else {
                nav.classList.remove('backdrop-blur-lg');
            }
        });
    </script>
</body>
</html>