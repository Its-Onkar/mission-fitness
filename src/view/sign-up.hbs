<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Signup - Join the Movement</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #000000 100%);
            color: #f1f1f1;
            font-family: 'Segoe UI', Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
            position: relative;
        }

        /* Animated Background with Fitness Icons */
        .fitness-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.1;
            z-index: 1;
        }

        .fitness-icon {
            position: absolute;
            font-size: 2rem;
            color: #666;
            animation: floatRandom 15s infinite linear;
        }

        .fitness-icon:nth-child(1) { top: 10%; left: 10%; animation-delay: 0s; }
        .fitness-icon:nth-child(2) { top: 20%; left: 80%; animation-delay: -2s; }
        .fitness-icon:nth-child(3) { top: 60%; left: 15%; animation-delay: -4s; }
        .fitness-icon:nth-child(4) { top: 70%; left: 70%; animation-delay: -6s; }
        .fitness-icon:nth-child(5) { top: 30%; left: 50%; animation-delay: -8s; }
        .fitness-icon:nth-child(6) { top: 80%; left: 30%; animation-delay: -10s; }
        .fitness-icon:nth-child(7) { top: 15%; left: 60%; animation-delay: -12s; }
        .fitness-icon:nth-child(8) { top: 85%; left: 85%; animation-delay: -14s; }

        /* Geometric Pattern Overlay */
        .geometric-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 25% 25%, #333 2px, transparent 2px),
                radial-gradient(circle at 75% 75%, #222 1px, transparent 1px);
            background-size: 100px 100px, 50px 50px;
            animation: patternShift 20s linear infinite;
            opacity: 0.3;
            z-index: 1;
        }

        /* Floating Particles */
        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: linear-gradient(45deg, #666, #444);
            border-radius: 50%;
            animation: particleFloat 25s infinite linear;
        }

        .particle:nth-child(1) { top: 10%; left: 20%; animation-delay: 0s; }
        .particle:nth-child(2) { top: 30%; left: 70%; animation-delay: -5s; }
        .particle:nth-child(3) { top: 60%; left: 10%; animation-delay: -10s; }
        .particle:nth-child(4) { top: 80%; left: 80%; animation-delay: -15s; }
        .particle:nth-child(5) { top: 40%; left: 40%; animation-delay: -20s; }

        /* Main Signup Container */
        .signup-container {
            background: linear-gradient(145deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
            backdrop-filter: blur(10px);
            border: 1px solid #333;
            padding: 40px 32px;
            border-radius: 20px;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.6),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            width: 400px;
            display: flex;
            flex-direction: column;
            gap: 24px;
            position: relative;
            z-index: 10;
            animation: slideInScale 1.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .signup-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #666, #444, #666, #444);
            border-radius: 22px;
            z-index: -1;
            animation: borderGlow 3s ease-in-out infinite;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 10px;
        }

        .logo-icon {
            width: 60px;
            height: 60px;
            margin: 0 auto 16px;
            background: linear-gradient(135deg, #666 0%, #444 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #fff;
            animation: logoPulse 2s ease-in-out infinite;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .signup-container h2 {
            margin: 0 0 10px 0;
            text-align: center;
            font-weight: 700;
            font-size: 28px;
            letter-spacing: 1px;
            background: linear-gradient(135deg, #fff 0%, #ccc 100%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: titleGlow 3s ease-in-out infinite;
        }

        .subtitle {
            text-align: center;
            color: #999;
            font-size: 14px;
            margin-bottom: 10px;
            animation: fadeInUp 1s ease-out 0.5s both;
        }

        .input-group {
            position: relative;
            animation: fadeInUp 1s ease-out both;
        }

        .input-group:nth-child(3) { animation-delay: 0.2s; }
        .input-group:nth-child(4) { animation-delay: 0.4s; }
        .input-group:nth-child(5) { animation-delay: 0.6s; }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            font-size: 18px;
            z-index: 2;
            transition: all 0.3s ease;
        }

        .signup-container input {
            background: linear-gradient(145deg, #0a0a0a 0%, #1a1a1a 100%);
            border: 1px solid #333;
            color: #f1f1f1;
            padding: 16px 16px 16px 50px;
            border-radius: 12px;
            font-size: 16px;
            outline: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .signup-container input:focus {
            border: 2px solid #666;
            background: linear-gradient(145deg, #111 0%, #222 100%);
            transform: translateY(-2px);
            box-shadow: 
                0 8px 16px rgba(0, 0, 0, 0.4),
                inset 0 2px 4px rgba(0, 0, 0, 0.2),
                0 0 20px rgba(102, 102, 102, 0.3);
        }

        .signup-container input:focus + .input-icon {
            color: #888;
            transform: translateY(-50%) scale(1.1);
        }

        .signup-container button {
            background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
            color: #fff;
            border: none;
            padding: 16px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            animation: fadeInUp 1s ease-out 0.8s both;
        }

        .signup-container button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .signup-container button:hover::before {
            left: 100%;
        }

        .signup-container button:hover {
            background: linear-gradient(135deg, #555 0%, #777 50%, #555 100%);
            transform: translateY(-3px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
        }

        .signup-container button:active {
            transform: translateY(-1px);
        }

        .signin-link {
            text-align: center;
            font-size: 14px;
            color: #999;
            animation: fadeInUp 1s ease-out 1s both;
        }

        .signin-link a {
            color: #bbb;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .signin-link a:hover {
            color: #fff;
            text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
        }

        /* Animations */
        @keyframes slideInScale {
            0% {
                opacity: 0;
                transform: scale(0.8) translateY(60px);
            }
            100% {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes floatRandom {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg); 
                opacity: 0.1; 
            }
            25% { 
                transform: translateY(-20px) rotate(90deg); 
                opacity: 0.3; 
            }
            50% { 
                transform: translateY(-10px) rotate(180deg); 
                opacity: 0.2; 
            }
            75% { 
                transform: translateY(-25px) rotate(270deg); 
                opacity: 0.4; 
            }
        }

        @keyframes patternShift {
            0% { background-position: 0 0, 0 0; }
            100% { background-position: 200px 200px, 100px 100px; }
        }

        @keyframes particleFloat {
            0% { 
                transform: translateY(0px) translateX(0px); 
                opacity: 0; 
            }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { 
                transform: translateY(-100vh) translateX(100px); 
                opacity: 0; 
            }
        }

        @keyframes borderGlow {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }

        @keyframes logoPulse {
            0%, 100% { 
                transform: scale(1); 
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3); 
            }
            50% { 
                transform: scale(1.05); 
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4); 
            }
        }

        @keyframes titleGlow {
            0%, 100% { text-shadow: 0 0 10px rgba(255, 255, 255, 0.3); }
            50% { text-shadow: 0 0 20px rgba(255, 255, 255, 0.6); }
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            .signup-container {
                width: 90%;
                padding: 32px 24px;
            }
        }
    </style>
</head>
<body>
    <!-- Animated Background Elements -->
    <div class="fitness-bg">
        <div class="fitness-icon">💪</div>
        <div class="fitness-icon">🏃‍♂️</div>
        <div class="fitness-icon">🏋️‍♀️</div>
        <div class="fitness-icon">🚴‍♂️</div>
        <div class="fitness-icon">⚡</div>
        <div class="fitness-icon">🔥</div>
        <div class="fitness-icon">💯</div>
        <div class="fitness-icon">🎯</div>
    </div>

    <div class="geometric-overlay"></div>

    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>

    <!-- Main Signup Form -->
    <form class="signup-container" id="signupForm">
        <div class="logo-container">
            <div class="logo-icon">💪</div>
            <h2>Join FitLife</h2>
            <p class="subtitle">Transform your body, elevate your life</p>
        </div>

        <div class="input-group">
            <input type="text" name="username" placeholder="Username" required>
            <div class="input-icon">👤</div>
        </div>

        <div class="input-group">
            <input type="email" name="email" placeholder="Email Address" required>
            <div class="input-icon">📧</div>
        </div>

        <div class="input-group">
            <input type="password" name="password" placeholder="Create Password" required>
            <div class="input-icon">🔒</div>
        </div>

        <button type="submit">Start Your Journey</button>

        <div class="signin-link">
            Already crushing it? <a href="#">Sign In</a>
        </div>
    </form>

    <script>
        // Enhanced form interactions
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('signupForm');
            const inputs = form.querySelectorAll('input');
            
            // Add input focus animations
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                    this.parentElement.style.zIndex = '11';
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';
                    this.parentElement.style.zIndex = '10';
                });

                // Typing animation effect
                input.addEventListener('input', function() {
                    const icon = this.nextElementSibling;
                    icon.style.animation = 'none';
                    icon.offsetHeight; // Trigger reflow
                    icon.style.animation = 'logoPulse 0.3s ease-out';
                });
            });

            // Form submission with animation
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const button = this.querySelector('button');
                const originalText = button.textContent;
                
                button.style.background = 'linear-gradient(135deg, #555 0%, #777 50%, #555 100%)';
                button.textContent = 'Welcome to FitLife! 🎉';
                
                // Create success animation
                setTimeout(() => {
                    form.style.animation = 'slideInScale 1s cubic-bezier(0.4, 0, 0.2, 1) reverse';
                    setTimeout(() => {
                        alert('Welcome to FitLife! Your fitness journey starts now! 💪');
                        button.textContent = originalText;
                        button.style.background = '';
                        form.style.animation = '';
                    }, 1000);
                }, 1000);
            });

            // Add random floating animation to background icons
            setInterval(() => {
                const icons = document.querySelectorAll('.fitness-icon');
                icons.forEach(icon => {
                    const randomDelay = Math.random() * 2;
                    const randomDuration = 3 + Math.random() * 2;
                    icon.style.animationDuration = randomDuration + 's';
                    icon.style.animationDelay = randomDelay + 's';
                });
            }, 10000);
        });

        // Add mouse movement parallax effect
        document.addEventListener('mousemove', function(e) {
            const container = document.querySelector('.signup-container');
            const x = (e.clientX / window.innerWidth) * 100;
            const y = (e.clientY / window.innerHeight) * 100;
            
            container.style.transform = `perspective(1000px) rotateY(${(x - 50) * 0.1}deg) rotateX(${(y - 50) * 0.1}deg)`;
        });

        // Reset transform when mouse leaves
        document.addEventListener('mouseleave', function() {
            const container = document.querySelector('.signup-container');
            container.style.transform = 'perspective(1000px) rotateY(0deg) rotateX(0deg)';
        });
    </script>
</body>
</html>